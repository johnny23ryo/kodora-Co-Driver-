<div class="min-h-screen flex items-center justify-center bg-customGreen">
  <div class="w-full max-w-3xl bg-gray-300 p-8 rounded-lg shadow-lg">
    <h1 class="font-bold text-center text-white mb-6 text-4xl">新規投稿</h1>
    <% if @post.errors.any? %>
      <div class="bg-red-500 text-white p-4 mb-6 rounded">
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="bg-gray-300 p-6 rounded-lg">
      <%= form_with model: @post, local: true, html: { multipart: true }, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :post_image, "イベントイメージ画像( png, jpg, jpeg, gif 対応 )", class: "block text-2xl font-bold mb-2 text-white" , accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
          <%= f.file_field :post_image, class: "form-input mt-1 block w-full text-2xl text-black bg-gray-100 rounded-md" %>
        </div>
        <div>
          <%= f.label :title, "イベントタイトル( 必須 )", class: "block text-2xl font-bold mb-2 text-white" %>
          <%= f.text_field :title, class: "form-input mt-1 block w-full text-2xl text-black bg-gray-100 rounded-md" %>
        </div>
        <div>
          <%= f.label :location, "都道府県", class: "block text-2xl font-bold mb-2 text-white" %>
          <%= f.select :location, options_for_select([
              '北海道', '青森県', '岩手県', '宮城県', '秋田県', '山形県', '福島県',
              '茨城県', '栃木県', '群馬県', '埼玉県', '千葉県', '東京都', '神奈川県',
              '新潟県', '富山県', '石川県', '福井県', '山梨県', '長野県', '岐阜県',
              '静岡県', '愛知県', '三重県', '滋賀県', '京都府', '大阪府', '兵庫県',
              '奈良県', '和歌山県', '鳥取県', '島根県', '岡山県', '広島県', '山口県',
              '徳島県', '香川県', '愛媛県', '高知県', '福岡県', '佐賀県', '長崎県',
              '熊本県', '大分県', '宮崎県', '鹿児島県', '沖縄県'
            ]), { prompt: '選択してください' }, class: 'form-input mt-1 block w-full text-2xl text-black bg-gray-100 rounded-md' %>
        </div>
        <div>
          <%= f.label :start_date, "イベント開始日", class: "block text-2xl font-bold mb-2 text-white" %>
          <%= f.date_field :start_date, class: "form-input mt-1 block w-full text-2xl text-black bg-gray-100 rounded-md" %>
        </div>
        <div>
          <%= f.label :end_date, "イベント終了日", class: "block text-2xl font-bold mb-2 text-white" %>
          <%= f.date_field :end_date, class: "form-input mt-1 block w-full text-2xl text-black bg-gray-100 rounded-md" %>
        </div>
        <div class="text-center mt-6">
          <%= f.submit "投稿", class: "text-white font-bold text-2xl" %>
        </div>
      <% end %>
      <div class="text-center mt-4">
        <%= link_to '投稿一覧に戻る', posts_path, class: "text-2xl text-white font-bold" %>
      </div>
    </div>
  </div>
</div>
