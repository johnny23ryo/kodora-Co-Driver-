<main class="container mx-auto mt-8">
  <div class="bg-white p-8 shadow-md rounded-lg bg-gray-300 rounded-3xl">
    <h2 class="text-2xl font-semibold mb-6">AIとおすすめの食事処を探す</h2>
    <%= form_with(url: restaurants_path, method: :post, local: true, class: "space-y-4", id: "search-form") do |form| %>
      <div>
        <%= form.label :address, "住所(漢字入力推奨)", class: "block text-xl font-bold mb-2" %>
        <%= form.text_field :address, id: "address", class: "form-input mt-1 block w-full p-2 border rounded", placeholder: "愛知県名古屋市" %>
      </div>
      <div class="text-center">
        <%= form.submit "おすすめの食事処を検索", class: "bg-blue-500 hover:scale-105 transition duration-300 text-white font-bold py-2 px-4 mt-8 rounded", id: "search-button" %>
      </div>
    <% end %>
    <p id="loading-message" class="mt-4 text-xl font-semibold" style="display: none;">AIが考え中...</p>
    <p id="recommendation" class="mt-4 text-xl font-semibold"></p>
    <p id="error-message" class="mt-4 text-xl font-semibold text-red-500" style="display: none;"></p>
  </div>
  <div id="map" class="mt-8 rounded-3xl"></div>
  <div id="directions-panel" class="mt-8 bg-white p-4 shadow-md rounded-lg"></div>
</main>

<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&callback=initMap" async defer></script>
